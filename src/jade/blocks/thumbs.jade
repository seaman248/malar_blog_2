mixin thumbnail(imgSrc, headTxt, prevTxt)
	.thumbnail
		a(href='#').img
			img(src=imgSrc)
			.hover
		ul.tags
			li
				a(href="#") Секс с животными
			li
				a(href="#") Анальный петтинг
			li
				a(href="#") Лесбиянки
		h3
			a(href="#") #{headTxt}
		p.prevTxt=prevTxt
		.date
			p Вчера 23:40




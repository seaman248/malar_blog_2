nav
	gs('fluid')
	font-family Open Sans, sans-serif
	border-bottom 1px solid #DEDEDE
	.navhead
		clearfix()
	.logo
		col(6)
		text-align left
		a
			text-decoration none
			font-weight bold
			text-transform uppercase
			font-size em(42)
			font-size 38px
			line-height 1
			color #FF5555
			margin 0
			padding 0
	.responsive_toogle_button
		text-align right
		button
			padding em(7) em(12)
			cursor pointer
			margin 0 em(10) 0 0
			border none
			outline none
			background-color rgba(226,226,226,0.3)
			transition background-color 0.18s ease-out 0.1s
		i
			font-size em(36)
		button:hover
			color white
			background-color #FF5555

	.navbar
		col(12)
		ul
			list-style-type none
			text-align center
			margin 0
			padding 0
		li
			padding em(18) 0
		a
			text-decoration none
			color #5C5C5C
			width 100%
			display block
			font-weight 300
			transition font-size 0.18s ease-out 0.1s
		a:hover
			font-size em(18)
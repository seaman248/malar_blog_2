.pagination
	list-style-type none
	padding em(30) 0
	margin em(5) 0
	text-align center
	font-family Open Sans
	li
		display inline-block
		padding 0 em(10)
	a
		font-size em(16)
		text-decoration none
		display block
		font-weight bold
		line-height em(35)
		width em(35)
		border-radius 50%
		transition-property background-color color font-size
		transition 0.17s ease-in 0.04s
	a:hover
		background-color RED_LOGO
		color white
	li.active
		a
			border 1px solid BC1
		a:hover
			border-color RED_LOGO